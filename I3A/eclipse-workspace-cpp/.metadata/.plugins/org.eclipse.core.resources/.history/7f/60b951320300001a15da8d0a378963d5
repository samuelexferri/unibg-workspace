#include "Studente.h"

#include <stdio.h>
#include <stdlib.h>

// NodoLista
typedef struct NodoLista {
	studenteRef stud;
	struct NodoLista *next;
} NodoLista;

struct Corso {
	char nomecorso[30];
	NodoLista *listaRef; // Lista degli studenti iscritti al corso
};

corsoRef makeStudent(char *n) {
	corsoRef cref = malloc(sizeof(struct Corso));

	strcpy(cref->nomecorso, n);

	cref->listaRef = NULL; // Inizialmente la lista non ha nodi

	return cref;
}

// Inserimento in testa alla lista
void addStudente(corsoRef c, studenteRef s) {

	NodoLista nodo = new NodoLista();
	nodo->stud = s;
	nodo->next = c->listaRef;
	c->listaRef = nodo;

}
