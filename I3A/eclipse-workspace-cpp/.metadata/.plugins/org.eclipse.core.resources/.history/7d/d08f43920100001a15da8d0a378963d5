#include "Studente.h"

#include <stdio.h>
#include <stdlib.h>

static int numeroprogressivo = 100; // Numero progressivo statico per le matricole

struct Studente {
	char nomecorso[30];

};

studenteRef makeStudent(char *n, char *c) {
	studenteRef sref = malloc(sizeof(struct Studente)); // L'intera struc nell'heap

	strcpy(sref->nome, n);
	strcpy(sref->cognome, c);
	// NO: sref->nome = n;
	// NO: sref->cognome = c;

	sref->matricola = numeroprogressivo;
	numeroprogressivo++;

	for (int i = 0; i < 20; i++)
		sref->voti[i] = 0;

	sref->votiindexlibero = 0;

	return sref;
}
